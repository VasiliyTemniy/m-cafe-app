{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./build",
    "newLine": "LF",
    "composite": true
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "./src"
  ],
  "references": [
    {
      "path": "../../node_modules/@m-cafe-app/db-models"
    },
    {
      "path": "../db-models"
    }
  ],
  "ts-node": {
    "esm": true
  }
}
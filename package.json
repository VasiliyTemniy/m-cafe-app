{
  "name": "m-cafe-app",
  "productName": "Custom cafe DIY-app",
  "version": "0.1.0",
  "description": "Quickly deployable cafe app template with slight customization via admin ui",
  "main": "services/frontend/.webpack/main",
  "repository": "https://github.com/VasiliyTemniy/m-cafe-app.git",
  "author": "VasiliyTemniy <flash_er@mail.ru>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "//C10": "C1",
    "//Comment1": "Common scripts",
    "//C11": "C1",
    "start": "yarn run prepare && concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "dev": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:frontend\"",
    "build": "yarn run prepare:packages && yarn run build:backend && yarn run build:frontend",
    "eslint": "yarn run eslint:db && yarn run eslint:utils && yarn run eslint:backend && yarn run eslint:frontend",
    "test": "yarn run test:backend && yarn run test:frontend",
    "//C20": "C2",
    "//Comment2": "Common:dev - frontend modules combinations",
    "//C21": "C2",
    "dev:customer": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:frontend:customer\"",
    "dev:admin": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:frontend:admin\"",
    "dev:manager": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:frontend:manager\"",
    "//C30": "C3",
    "//Comment3": "Backend scripts",
    "//C31": "C3",
    "start:backend": "yarn workspace m-cafe-backend start",
    "dev:backend": "yarn workspace m-cafe-backend run dev",
    "build:backend": "yarn workspace m-cafe-backend run build",
    "eslint:backend": "yarn workspace m-cafe-backend run eslint",
    "test:backend": "yarn workspace m-cafe-backend run test",
    "//C40": "C4",
    "//Comment4": "Frontend scripts",
    "//C41": "C4",
    "build:frontend": "yarn workspace m-cafe-frontend run build",
    "eslint:frontend": "yarn workspace m-cafe-frontend run eslint",
    "start:frontend": "concurrently \"yarn start:frontend:customer\" \"yarn start:frontend:admin\" \"yarn start:frontend:manager\"",
    "dev:frontend": "concurrently \"yarn run dev:frontend:customer\" \"yarn run dev:frontend:admin\" \"yarn run dev:frontend:manager\"",
    "build:frontend:customer": "yarn workspace m-cafe-frontend run build:customer",
    "build:frontend:admin": "yarn workspace m-cafe-frontend run build:admin",
    "build:frontend:manager": "yarn workspace m-cafe-frontend run build:manager",
    "start:frontend:customer": "yarn workspace m-cafe-frontend start:customer",
    "start:frontend:admin": "yarn workspace m-cafe-frontend start:admin",
    "start:frontend:manager": "yarn workspace m-cafe-frontend start:manager",
    "dev:frontend:customer": "yarn workspace m-cafe-frontend run dev:customer",
    "dev:frontend:admin": "yarn workspace m-cafe-frontend run dev:admin",
    "dev:frontend:manager": "yarn workspace m-cafe-frontend run dev:manager",
    "test:frontend": "yarn workspace m-cafe-frontend run test",
    "//C50": "C5",
    "//Comment5": "Mobile frontend scripts",
    "//C51": "C5",
    "start:mobile": "yarn workspace m-cafe-mobile start",
    "//C60": "C6",
    "//Comment6": "Prepare: pre-build scripts",
    "//C61": "C6",
    "prepare": "yarn run prepare:packages && yarn install",
    "prepare:packages": "yarn run build:db && yarn run build:utils",
    "prepare:backend": "yarn run prepare:packages && yarn workspaces focus m-cafe-backend",
    "prepare:frontend": "yarn run prepare:packages && yarn workspaces focus m-cafe-frontend",
    "//C70": "C7",
    "//Comment7": "Packages related scripts",
    "//C71": "C7",
    "build:db": "yarn workspace @m-cafe-app/db run build",
    "build:utils": "yarn workspace @m-cafe-app/utils run build",
    "eslint:db": "yarn workspace @m-cafe-app/db run eslint",
    "eslint:utils": "yarn workspace @m-cafe-app/utils run eslint",
    "eslint:frontend-logic": "yarn workspace @m-cafe-app/frontend-logic run eslint",
    "test:packages": "yarn run test:db && yarn run test:utils",
    "test:db": "yarn workspace @m-cafe-app/db run test",
    "test:utils": "yarn workspace @m-cafe-app/utils run test",
    "//C80": "C8",
    "//Comment8": "Docker related scripts",
    "//C81": "C8",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml -p m_cafe_dev down",
    "docker:prod:up": "docker compose -f docker-compose.yml -p m_cafe up --detach",
    "docker:prod:down": "docker compose -f docker-compose.yml -p m_cafe down"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "typescript": "~5.1.6"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "packageManager": "yarn@3.6.1"
}

{
  "name": "m-cafe-app",
  "productName": "Modular cafe app",
  "version": "0.1.0",
  "description": "Quickly deployable cafe app template with slight customization via admin ui",
  "main": "services/web/.webpack/main",
  "repository": "https://github.com/VasiliyTemniy/m-cafe-app.git",
  "author": "VasiliyTemniy <flash_er@mail.ru>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "//C10": "C1",
    "//Comment1": "Common scripts",
    "//C11": "C1",
    "start": "yarn run prepare && concurrently \"yarn start:backend\" \"yarn start:web\"",
    "dev": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:web\"",
    "build": "yarn run prepare:packages && yarn run build:backend && yarn run build:web",
    "eslint": "yarn run eslint:packages && yarn run eslint:backend && yarn run eslint:web",
    "test": "yarn run test:backend && yarn run test:web",
    "//C20": "C2",
    "//Comment2": "Common:dev - frontend modules combinations",
    "//C21": "C2",
    "dev:customer": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:web:customer\"",
    "dev:admin": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:web:admin\"",
    "dev:manager": "yarn run prepare && concurrently \"yarn run dev:backend\" \"yarn run dev:web:manager\"",
    "//C30": "C3",
    "//Comment3": "Backend scripts",
    "//C31": "C3",
    "start:backend": "yarn workspace m-cafe-backend start",
    "dev:backend": "yarn workspace m-cafe-backend run dev",
    "build:backend": "yarn workspace m-cafe-backend run build",
    "eslint:backend": "yarn workspace m-cafe-backend run eslint",
    "test:backend": "yarn workspace m-cafe-backend run test",
    "//C40": "C4",
    "//Comment4": "Frontend scripts",
    "//C41": "C4",
    "build:web": "yarn workspace m-cafe-web run build",
    "eslint:web": "yarn workspace m-cafe-web run eslint",
    "start:web": "concurrently \"yarn start:web:customer\" \"yarn start:web:admin\" \"yarn start:web:manager\"",
    "dev:web": "concurrently \"yarn run dev:web:customer\" \"yarn run dev:web:admin\" \"yarn run dev:web:manager\"",
    "build:web:customer": "yarn workspace m-cafe-web run build:customer",
    "build:web:admin": "yarn workspace m-cafe-web run build:admin",
    "build:web:manager": "yarn workspace m-cafe-web run build:manager",
    "start:web:customer": "yarn workspace m-cafe-web start:customer",
    "start:web:admin": "yarn workspace m-cafe-web start:admin",
    "start:web:manager": "yarn workspace m-cafe-web start:manager",
    "dev:web:customer": "yarn workspace m-cafe-web run dev:customer",
    "dev:web:admin": "yarn workspace m-cafe-web run dev:admin",
    "dev:web:manager": "yarn workspace m-cafe-web run dev:manager",
    "test:web": "yarn workspace m-cafe-web run test",
    "//C50": "C5",
    "//Comment5": "Mobile frontend scripts",
    "//C51": "C5",
    "start:mobile": "yarn workspace m-cafe-mobile start",
    "//C60": "C6",
    "//Comment6": "Prepare: pre-build scripts",
    "//C61": "C6",
    "prepare": "yarn run prepare:packages && yarn install",
    "prepare:packages": "yarn run build:shared-constants && yarn run build:db && yarn run build:utils",
    "prepare:backend": "yarn run prepare:packages && yarn workspaces focus m-cafe-backend",
    "prepare:web": "yarn run prepare:packages && yarn workspaces focus m-cafe-web",
    "//C70": "C7",
    "//Comment7": "Packages related scripts",
    "//C71": "C7",
    "build:db": "yarn workspace @m-cafe-app/db run build",
    "build:utils": "yarn workspace @m-cafe-app/utils run build",
    "build:shared-constants": "yarn workspace @m-cafe-app/shared-constants run build",
    "eslint:packages": "yarn eslint:db && yarn eslint:utils && yarn eslint:shared-constants && yarn eslint:frontend-logic",
    "eslint:db": "yarn workspace @m-cafe-app/db run eslint",
    "eslint:utils": "yarn workspace @m-cafe-app/utils run eslint",
    "eslint:shared-constants": "yarn workspace @m-cafe-app/shared-constants run eslint",
    "eslint:frontend-logic": "yarn workspace @m-cafe-app/frontend-logic run eslint",
    "test:packages": "yarn run test:db && yarn run test:utils",
    "test:db": "yarn workspace @m-cafe-app/db run test",
    "test:utils": "yarn workspace @m-cafe-app/utils run test",
    "//C80": "C8",
    "//Comment8": "Docker related scripts",
    "//C81": "C8",
    "docker:dev:customer:up": "docker compose -f docker-compose.customer.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:customer:down": "docker compose -f docker-compose.customer.dev.yml -p m_cafe_dev down",
    "docker:dev:admin:up": "docker compose -f docker-compose.admin.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:admin:down": "docker compose -f docker-compose.admin.dev.yml -p m_cafe_dev down",
    "docker:dev:manager:up": "docker compose -f docker-compose.manager.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:manager:down": "docker compose -f docker-compose.manager.dev.yml -p m_cafe_dev down",
    "docker:prod:up": "docker compose -f docker-compose.yml -p m_cafe up --detach",
    "docker:prod:down": "docker compose -f docker-compose.yml -p m_cafe down",
    "//C90": "C9",
    "dev:web:admin:vue": "yarn workspace m-cafe-web-vue run dev",
    "eslint:vue": "yarn workspace m-cafe-web-vue run lint",
    "//C91": "C9"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-vue": "^9.17.0",
    "typescript": "~5.1.6"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "packageManager": "yarn@3.6.1"
}

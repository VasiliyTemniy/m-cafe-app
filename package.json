{
  "name": "m-cafe-app",
  "productName": "Modular cafe app",
  "version": "0.1.0",
  "description": "Quickly deployable cafe app template with slight customization via admin ui",
  "main": "services/web/.webpack/main",
  "repository": "https://github.com/VasiliyTemniy/m-cafe-app.git",
  "author": "VasiliyTemniy <flash_er@mail.ru>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "//C10": "C1",
    "//Comment1": "Common scripts",
    "//C11": "C1",
    "start": "yarn prepare && concurrently \"yarn start:backend\" \"yarn start:web\"",
    "dev": "yarn prepare && concurrently \"yarn dev:backend\" \"yarn dev:web\"",
    "build": "yarn prepare:packages && yarn build:backend && yarn build:web",
    "eslint": "yarn eslint:packages && yarn eslint:backend && yarn eslint:web",
    "test": "yarn test:backend && yarn test:web",
    "//C20": "C2",
    "//Comment2": "Common:dev - frontend modules combinations",
    "//C21": "C2",
    "dev:customer": "yarn prepare && concurrently \"yarn dev:backend\" \"yarn dev:web:customer\"",
    "dev:admin": "yarn prepare && concurrently \"yarn dev:backend\" \"yarn dev:web:admin\"",
    "dev:manager": "yarn prepare && concurrently \"yarn dev:backend\" \"yarn dev:web:manager\"",
    "//C30": "C3",
    "//Comment3": "Backend scripts",
    "//C31": "C3",
    "start:backend": "yarn workspace m-cafe-backend start",
    "dev:backend": "yarn workspace m-cafe-backend dev",
    "build:backend": "yarn workspace m-cafe-backend build",
    "eslint:backend": "yarn workspace m-cafe-backend eslint",
    "test:backend": "yarn workspace m-cafe-backend test",
    "//C40": "C4",
    "//Comment4": "Frontend scripts",
    "//C41": "C4",
    "build:web": "yarn workspace m-cafe-web build",
    "eslint:web": "yarn workspace m-cafe-web eslint",
    "start:web": "concurrently \"yarn start:web:customer\" \"yarn start:web:admin\" \"yarn start:web:manager\"",
    "dev:web": "concurrently \"yarn dev:web:customer\" \"yarn dev:web:admin\" \"yarn dev:web:manager\"",
    "build:web:customer": "yarn workspace m-cafe-web build:customer",
    "build:web:admin": "yarn workspace m-cafe-web build:admin",
    "build:web:manager": "yarn workspace m-cafe-web build:manager",
    "start:web:customer": "yarn workspace m-cafe-web start:customer",
    "start:web:admin": "yarn workspace m-cafe-web start:admin",
    "start:web:manager": "yarn workspace m-cafe-web start:manager",
    "dev:web:customer": "yarn workspace m-cafe-web dev:customer",
    "dev:web:admin": "yarn workspace m-cafe-web dev:admin",
    "dev:web:manager": "yarn workspace m-cafe-web dev:manager",
    "test:web": "yarn workspace m-cafe-web test",
    "//C50": "C5",
    "//Comment5": "Mobile frontend scripts",
    "//C51": "C5",
    "start:mobile": "yarn workspace m-cafe-mobile start",
    "//C60": "C6",
    "//Comment6": "Prepare: pre-build scripts",
    "//C61": "C6",
    "prepare": "yarn prepare:packages && yarn install",
    "prepare:packages": "yarn build:packages:backend",
    "prepare:backend": "yarn build:packages:backend && yarn workspaces focus m-cafe-backend",
    "prepare:web": "yarn build:packages:frontend && yarn workspaces focus m-cafe-web",
    "//C70": "C7",
    "//Comment7": "Packages related scripts",
    "//C71": "C7",
    "build:db": "yarn workspace @m-cafe-app/db build",
    "build:utils": "yarn workspace @m-cafe-app/utils build",
    "build:shared-constants": "yarn workspace @m-cafe-app/shared-constants build",
    "build:backend-logic": "yarn workspace @m-cafe-app/backend-logic build",
    "build:models": "yarn workspace @m-cafe-app/models build",
    "build:packages:shared": "yarn build:shared-constants && yarn build:utils && yarn build:models",
    "build:packages:backend": "yarn build:packages:shared && yarn build:db && yarn build:backend-logic",
    "build:packages:frontend": "yarn build:packages:shared",
    "eslint:packages": "yarn eslint:db && yarn eslint:utils && yarn eslint:shared-constants && yarn eslint:frontend-logic && yarn eslint:backend-logic && yarn eslint:models",
    "eslint:db": "yarn workspace @m-cafe-app/db eslint",
    "eslint:utils": "yarn workspace @m-cafe-app/utils eslint",
    "eslint:shared-constants": "yarn workspace @m-cafe-app/shared-constants eslint",
    "eslint:backend-logic": "yarn workspace @m-cafe-app/backend-logic eslint",
    "eslint:models": "yarn workspace @m-cafe-app/models eslint",
    "eslint:frontend-logic": "yarn workspace @m-cafe-app/frontend-logic eslint",
    "test:packages": "yarn test:db && yarn test:utils",
    "test:db": "yarn workspace @m-cafe-app/db test",
    "test:utils": "yarn workspace @m-cafe-app/utils test",
    "test:backend-logic": "yarn workspace @m-cafe-app/backend-logic test",
    "//C80": "C8",
    "//Comment8": "Docker related scripts",
    "//C81": "C8",
    "docker:dev:customer:up": "docker compose -f docker-compose.customer.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:customer:down": "docker compose -f docker-compose.customer.dev.yml -p m_cafe_dev down",
    "docker:dev:admin:up": "docker compose -f docker-compose.admin.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:admin:down": "docker compose -f docker-compose.admin.dev.yml -p m_cafe_dev down",
    "docker:dev:manager:up": "docker compose -f docker-compose.manager.dev.yml -p m_cafe_dev up --detach",
    "docker:dev:manager:down": "docker compose -f docker-compose.manager.dev.yml -p m_cafe_dev down",
    "docker:prod:up": "docker compose -f docker-compose.yml -p m_cafe up --detach",
    "docker:prod:down": "docker compose -f docker-compose.yml -p m_cafe down",
    "//C90": "C9",
    "//Comment9": "Other scripts",
    "//C91": "C9",
    "backend-logic:gen-proto": "yarn workspace @m-cafe-app/backend-logic gen-proto"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "typescript": "~5.1.6"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "packageManager": "yarn@3.6.1"
}

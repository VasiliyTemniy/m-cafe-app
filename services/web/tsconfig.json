{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["shared/*"]
    },
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "noEmit": false,
    "outDir": "./dist",
    "rootDirs": [
      "."
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext",
      "ScriptHost"
    ],
    "newLine": "LF"
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "customer/src",
    "admin/src",
    "manager/src",
    "shared",
    "webpack_config"
  ],
  "references": [
    {
      "path": "../../packages/utils"
    }
  ]
}
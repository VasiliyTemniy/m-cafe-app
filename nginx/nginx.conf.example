events {}
http {
  server {
    listen 80;

    location / {
      proxy_http_version 1.1;
      proxy_pass http://frontend-user:80;
    }

    location /admin/ {
      proxy_http_version 1.1;
      proxy_pass http://frontend-admin:80/;
    }

    location /manager/ {
      proxy_http_version 1.1;
      proxy_pass http://frontend-manager:80/;
    }

    location /api/ {
      proxy_http_version 1.1;
      proxy_pass http://backend:4001/;
    }
  }
}
{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./build",
    "rootDirs": ["./src", "../shared"],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2019"
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules/*"],
  "include": ["src", "../shared"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}

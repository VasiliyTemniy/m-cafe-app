{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "warn",
      2,
      { 
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-useless-escape": 0
  },
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "root": true,
  "overrides": [
    {
      "files": [
        "**/*.{js,jsx}"
      ],
      "rules": {
        "indent": [
          "off",
          4
        ]
      }
    }
  ]
}